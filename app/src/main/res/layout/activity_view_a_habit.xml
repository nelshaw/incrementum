<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:gravity="center"
  android:background="@color/lightGreyTheme"
  tools:context=".ViewAHabit">

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/lightGreyTheme">

  <TextView
    android:id="@+id/name"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:textAlignment="center"
    android:textColor="@color/redTheme"
    android:textSize="26sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/textView11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="10dp"
    android:text="Here is what triggers your habit:"
    android:textAlignment="center"
    android:textIsSelectable="true"
    android:textSize="16sp"
    android:textColor="@color/darkGrey"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/triggersListView"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:padding="10dp"
    android:background="@color/white"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:textSize="16sp"
    android:textColor="@color/darkGrey" />

  <TextView
    android:id="@+id/Times"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="10dp"
    android:text="Here is when your perform your habit:"
    android:textAlignment="center"
    android:textIsSelectable="true"
    android:textSize="16sp"
    android:textColor="@color/darkGrey"
    android:textStyle="bold"  />

  <TextView
    android:id="@+id/timesListView"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:textAlignment="center"
    android:textIsSelectable="true"
    android:textSize="16sp"
    android:textColor="@color/darkGrey" />

  <TextView
    android:id="@+id/textView7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="10dp"
    android:text="Here is how you initially felt about your habit:"
    android:textAlignment="center"
    android:textIsSelectable="true"
    android:textSize="16sp"
    android:textColor="@color/darkGrey"
    android:textStyle="bold"/>

  <TextView
    android:id="@+id/description"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:textAlignment="center"
    android:textSize="16sp"
    android:textColor="@color/darkGrey" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:gravity="center"
    android:orientation="horizontal">

  <Button
    android:id="@+id/back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:background="@color/lightGreyTheme"
    android:padding="10dp"
    android:text="back"
    android:textColor="@color/darkGrey" />

  <Button
    android:id="@+id/delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_red"
    android:padding="10dp"
    android:text="Delete"
    android:textColor="@color/cremeTheme"/>
  </LinearLayout>
</LinearLayout>
</ScrollView>
