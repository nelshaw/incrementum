<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="@color/lightGreyTheme"
  android:fitsSystemWindows="true"
  android:paddingLeft="24dp"
  android:paddingTop="56dp"
  android:paddingRight="24dp"
  android:layout_gravity="center"
  tools:context=".Hobby_Stats">

  <TextView
    android:id="@+id/textView16"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Habit and Hobby Analytics"
    android:textColor="@color/redTheme"
    android:textSize="26sp"
    android:textAlignment="center"
    android:textAllCaps="true"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/usertext"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="For User"
    android:textColor="@color/redTheme"
    android:textSize="26sp"
    android:textAlignment="center"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/textView17"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:text="Hobby Stats"
    android:textColor="@color/darkGrey"
    android:gravity="center"
    android:textSize="16sp"
    android:textStyle="bold" />

  <Button
    android:id="@+id/hobbybutton"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="Click Here"
    android:background="@drawable/button_red"
    android:textColor="@color/cremeTheme"
    android:layout_gravity="center"/>

  <TextView
    android:id="@+id/textView18"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:text="Habit Stats"
    android:textColor="@color/darkGrey"
    android:textSize="16sp"
    android:gravity="center"
    android:textStyle="bold" />

  <Button
    android:id="@+id/add"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="Click Here"
    android:background="@drawable/button_red"
    android:textColor="@color/cremeTheme"
    android:layout_gravity="center"/>

  <Button
    android:id="@+id/backbutton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:text="Back to Profile"
    android:background="@color/lightGreyTheme"
    android:layout_gravity="center"/>

</LinearLayout>
