<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  tools:context=".HabitEffectActivity"
  android:background="@color/lightGreyTheme"
  android:fitsSystemWindows="true"
  android:paddingLeft="24dp"
  android:paddingTop="56dp"
  android:paddingRight="24dp"
  android:layout_gravity="center">

  <TextView
    android:id="@+id/textView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="48dp"
    android:text="Let's Reflect"
    android:textAlignment="center"
    android:textAllCaps="true"
    android:textColor="@color/redTheme"
    android:textSize="26sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/textView2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:text="How has the habit affected your life?"
    android:gravity="start"
    android:textColor="@color/darkGrey"
    android:textSize="16sp"
    android:textStyle="bold" />

  <Button
    android:id="@+id/positive_button"
    android:text="Positively/Neutral"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/button_red"
    android:textColor="@color/cremeTheme"
    android:layout_gravity="center"/>

  <Button
    android:id="@+id/negative_button"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="30dp"
    android:text="Negatively"
    android:background="@drawable/button_red"
    android:textColor="@color/cremeTheme"
    android:layout_gravity="center"/>

</LinearLayout>
