<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  tools:context=".only_habits"
  android:background="@color/lightGreyTheme"
  android:fitsSystemWindows="true"
  android:paddingLeft="24dp"
  android:paddingTop="56dp"
  android:paddingRight="24dp"
  android:layout_gravity="center">

  <TextView
    android:id="@+id/usertext"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="Habit Stats for User"
    android:textColor="@color/redTheme"
    android:textSize="26sp"
    android:textStyle="bold"
    android:textAlignment="center"/>

  <TextView
    android:id="@+id/H1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:text="Habit One:"
    android:textColor="@color/darkGrey"
    android:textSize="16sp"
    android:textStyle="bold"
    android:visibility="visible" />

  <TextView
    android:id="@+id/T1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginTop="10dp"
    android:text="Triggers:"
    android:textColor="@color/darkGrey"
    android:textSize="16sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/ST1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginTop="10dp"
    android:text="Sensitive Time:"
    android:textColor="@color/darkGrey"
    android:textSize="16sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/H2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:text="Habit Two:"
    android:textColor="@color/darkGrey"
    android:textSize="16sp"
    android:textStyle="bold"
    android:visibility="visible" />

  <TextView
    android:id="@+id/T2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginTop="10dp"
    android:text="Triggers:"
    android:textColor="@color/darkGrey"
    android:textSize="16sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/ST2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginTop="10dp"
    android:text="Sensitive Time:"
    android:textColor="@color/darkGrey"
    android:textSize="16sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/H3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:text="Habit Three:"
    android:textColor="@color/darkGrey"
    android:textSize="16sp"
    android:textStyle="bold"
    android:visibility="visible" />

  <TextView
    android:id="@+id/T3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginTop="10dp"
    android:text="Triggers:"
    android:textColor="@color/darkGrey"
    android:textSize="16sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/ST3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginTop="10dp"
    android:text="Sensitive Time:"
    android:textColor="@color/darkGrey"
    android:textSize="16sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/TTL"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:text="Total Habits:"
    android:textColor="@color/redTheme"
    android:textSize="16sp"
    android:textStyle="bold" />

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:gravity="center">

    <Button
      android:id="@+id/hobbybutton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:background="@drawable/button_red"
      android:text="To Hobbies"
      android:textColor="@color/cremeTheme" />

    <Button
      android:id="@+id/profile"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:padding="10dp"
      android:background="@drawable/button_red"
      android:text="To Main"
      android:textColor="@color/cremeTheme" />
  </LinearLayout>

</LinearLayout>
